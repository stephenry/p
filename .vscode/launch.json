{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Driver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/driver",
            "args": [
                "--enable-waveform-dumping",
                "--project",
                "seqgen",
                "--instance",
                "cfg_case",
                "--test",
                "generic_tester",
                "--args",
                "",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}